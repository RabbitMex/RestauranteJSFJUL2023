						<b:dataTableColumn label="Segundo Apellido">
							<h:outputText value="#{empleado.segundoApellido}"></h:outputText>
						</b:dataTableColumn>
						
						<b:dataTableColumn label="Usuario">
							<h:outputText value="#{empleado.usuario}"></h:outputText>
